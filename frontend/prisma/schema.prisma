generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  username String @unique
  password String
  role     String
  team     Team?  @relation(fields: [teamId], references: [id])
  teamId   Int?
}

model Team {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  users User[]
}

model security_test_results {
  id                  Int          @id @default(autoincrement())
  commit_hash         String       @unique
  timestamp           DateTime     @default(now())
  repository          String
  branch              String
  runner              String
  project_id          String
  test_name           String
  test_type           String
  test_category       String
  status              String
  duration            Float
  vulnerability_found Boolean
  assertions          assertions[]
}

model assertions {
  id          Int     @id @default(autoincrement())
  commit_hash String  @map("commit_hash")
  name        String
  status      String
  expected    String?
  actual      String?
  risk        String? @default("NA")
  confidence  String? @default("NA")
  message     String?

  securityTestResult security_test_results @relation(fields: [commit_hash], references: [commit_hash], onDelete: Cascade)
}
